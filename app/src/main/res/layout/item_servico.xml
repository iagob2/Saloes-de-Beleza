<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/selector_item_background"
    android:clickable="true"
    android:focusable="true">

    <!-- Nome do Serviço -->
    <TextView
        android:id="@+id/tvNomeServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Serviço"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Preço e Duração -->
    <TextView
        android:id="@+id/tvPrecoDuracaoServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$ 100,00 - 1h"
        android:textSize="14sp" />

    <!-- Descrição -->
    <TextView
        android:id="@+id/tvDescricaoServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição do serviço."
        android:textSize="12sp"
        android:paddingTop="4dp" />
</LinearLayout>
